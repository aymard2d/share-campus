
<div class="main-card-content">
  <div class="card-visualisation" data-display-visuel-target="preview" >
    <p><%= cl_image_tag @last_course.document.key, width: 250, height: 300,crop: :fill, format: :jpg, class:"pdf" %></p>
    <h4 class=" visu-subtitle"> <%= Course.last.title%> </h4>
    <p class="summarize"> <%= Course.last.summarize%> </p>
    <h5 class="card-title"> <i class="fas fa-chart-pie"></i> <%= Course.last.category%> </h5>
    <p class="visu-text"> <%= Course.last.user.first_name%> <%= Course.last.user.last_name%> </p>
    <%= link_to "Voir le cours", "https://res.cloudinary.com/dnqkzzqga/image/upload/c_fill,h_1000,w_1000/v1/development/#{@last_course.document.key}", target: :blank, class: "a-file"%>
  </div>

  <div class="main-container-file" >
    <div class="file-download">
      <img src="<%= image_path 'file.png'%>" class="icon-file" >
      <button class="button-62 btn-file" data-action="click->add-course#displayForm" role="button"> Share ton cours </button>
    </div>
    <%= render 'courses/add_course_form'%>
  </div>
</div>


