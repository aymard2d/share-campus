<%= simple_form_for(@course) do |f|%>
<div class="form-inputs">
  <%= f.input :title %>
  <%= f.input :category %>
  <%= f.input :summarize%>
  <%= f.input :date, html5: true%>
  <%= f.input_field :user_id, as: :hidden, value: params[:id]%>

</div>
<div class="input-actions">
  <%= f.submit "Ajouter", class:"button-form"%>
  <% end %>
</div>
