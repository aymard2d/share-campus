<div class="main-card-content">

  <div class="card-visualisation" data-display-event-card-target="preview">
    <p><%#= cl_image_tag event.document.key, width: 250, height: 300,crop: :fill, format: :jpg, class:"pdf" %></p>
    <h4 class=" visu-subtitle"> <%= event.title%> </h4>
    <p class="summarize"> <%= event.description%> </p>
    <h5 class="card-title"> <i class="fas fa-chart-pie"></i> <%= event.category%> </h5>
    <p class="visu-text"> <%= event.user.first_name%> <%= event.user.last_name%> </p>
  </div>