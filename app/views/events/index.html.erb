<div class="user-main-container" data-controller="add-event display-event-card">
  <div>
    <div class="row justify-content-center mx-5 mb-4 border rounded-pill p-1">
      <%= form_with url: events_path, method: :get, class: "d-flex search-bar" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control bg-none border-0 search",
          placeholder: "Rechercher un évènement"
        %>
        <%= button_tag(type: "submit", class: "btn btn-link text-info") do %>
          <i class="fa fa-search"></i>
        <% end%>
      <% end %>
    </div>

    <div id="courses" >
      <div class="event-cards" data-add-event-target="list">
        <% @events.each do |event| %>
          <%= link_to "events/#{event.id}", data: { action:  "click->display-event-card#display" },class: "", style: 'text-decoration: none' do %>
            <div class="event-card">
              
              <% if event.category == "Soirée" %>
                <%= image_tag("party.jpg") %>
              <% elsif event.category == "Conférence" %>
                <%= image_tag("conference-2.png") %>
              <% elsif event.category == "Speed dating" %>
                <%= image_tag("speed-dating.png") %>
                <i class="fa-regular fa-heart"></i>
              <% elsif event.category == "Coaching" %>
                <%= image_tag("conference-2.png") %>
              <% elsif event.category == "CAMPUS ALERT" %>
                <%= image_tag("campus-alert.jpg") %>
              <% elsif event.category == "Gaming" %>
                <%= image_tag("gaming.png") %>
              <% elsif event.category == "Témoignage" %>
                <%= image_tag("témoignage.jpg")  %>
                <i class="fa-solid fa-headset"></i>
              <% elsif event.category == "Tournoi" %>
                <%= image_tag("tournoi.jpg")  %>
              <% end %>
              <div class="event-infos">
                <span class="event-intro">Share Event & <%= event.created_by %></span>
                <h2 visu-subtitle><%= event.title %></h2>
                <p>Date de l'évènement -
                <%= event.starting_date %><%= event.starting_time %></p>
                
  

              </div>
            </div>

          <% end %>
        <% end %>
      </div>
    </div>
  </div>
      
  <div class="display-event">
    <%= render "events/visualisation_event", event: @last_event %>
    <div class="main-container-file">
      <div class="file-download">
        <img src="<%= image_path 'add-event.jpg'%>" class="icon-file" >
        <button class="button-62 btn-file" data-action="click->add-event#displayForm" role="button"> Share ton évènement </button>
      </div>
      <%= render 'events/add_event_form'%>
    </div>
  </div>
</div>

